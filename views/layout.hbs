              </li>

              <li class="nav-item">
                <a class="nav-link" href="/reviews">Reviews List</a>
              </li>
  {{#unless username}}
              <li class="nav-item">
                <a class="nav-link" href="/auth/signup">Sign up</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/auth/login">Login</a>
              </li>
              {{/unless}}

  {{#if username}}
              <li class="nav-item">
                <a class="nav-link" href="/auth/logout">Logout</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/user/profile">Profile</a>
              </li>
              
              {{/if}}
            </ul>


            
