  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="shortcut icon" href="https://www.kindpng.com/picc/m/418-4184335_transparent-playstation-clipart-drawn-controller-hd-png-download.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>




<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>

    <!-- Wrapper for slides -->
        {{#each gameDetail.screenshots}}
    <div class="carousel-inner" role="listbox">

      <div class="item active">
        <img class="img-fluid " src="{{this.image}}" alt="screenshot">   
      </div>

      <div class="item">
        <img class="img-fluid" src="{{this.image}}" alt="screenshot">
   
      </div>
        {{/each }}
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
</div>


<div class="container text-center">    
  <h3>Game Info:</h3>
  <p>{{gameDetail.description}}</p><br>
</div>

<div class="container text-center">
    <h1>{{gameDetail.title}}</h1>
    
    <h4>Genre:</h4>
    <p> {{gameDetail.genre}}</p>

      <h4>Publisher:</h4>
    <p>{{gameDetail.publisher}}</p><br>

    <h4>Developer:</h4>
      <p>{{gameDetail.developer}}</p><br>

    <h4>Release Date:</h4>
      <p>{{gameDetail.release_date}}</p><br>

    <h4>Minimum System Requirements:</h4>
    <ul class="list-unstyled">
      <li>OS: {{gameDetail.minimum_system_requirements.os}}</li>
      <li>Processor: {{gameDetail.minimum_system_requirements.processor}}</li>
      <li>Memory: {{gameDetail.minimum_system_requirements.memory}}</li>
      <li>Graphics: {{gameDetail.minimum_system_requirements.graphics}}</li>
      <li>Storage: {{gameDetail.minimum_system_requirements.storage}}</li>
    </ul> 
</div>

    
{{#if gameDetail.game_url}}
  <h3 class="text-center "><a class="btn btn-primary" href="{{gameDetail.game_url}} ">Click to play for free</a></h3>
{{/if}}

<div class="text-center" >
  <a  class="btn btn-primary " href="/games/{{gameDetail.id}}/details/create-review">Make your Review!</a>
</div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>