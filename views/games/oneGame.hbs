  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="shortcut icon" href="https://www.kindpng.com/picc/m/418-4184335_transparent-playstation-clipart-drawn-controller-hd-png-download.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>

<div class="container text-center">
   <h1>{{gameDetail.title}}</h1>
   <h2>Genre: {{gameDetail.genre}}</h2>
</div>


<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">

   <div class="row gx-4 gx-lg-5 align-items-center">

     
      <div class="col-md-6">
      </div>
      

<div id="carouselExampleControls" class="carousel slide card-img-top mb-5 mb-md-0" data-bs-ride="carousel">
  <div class="carousel-inner">
    {{#each gameDetail.screenshots}}
    <div class="carousel-item active">
      <img src="{{this.image}}" class="d-block w-50 " alt="...">
    </div>
    {{/each }}

  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
      

      <div class="col-md-6">
        <p class="lead">{{gameDetail.description}}</p>
        <div class="d-flex">

        </div>
       </div>
  </div>
</div>



</div>

{{#if gameDetail.game_url}}
<h3 class="text-center "><a class="btn btn-primary" href="{{gameDetail.game_url}} ">Click to play for free</a></h3>
{{/if}}

<div class="text-center" >
<a  class="btn btn-primary " href="/games/{{gameDetail.id}}/details/create-review">Make your Review!</a>
</div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>