<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="shortcut icon" href="https://www.kindpng.com/picc/m/418-4184335_transparent-playstation-clipart-drawn-controller-hd-png-download.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
<div class="container">
  <div class="row">
   <div id="myCarousel" class="carousel slide col" data-ride="carousel">
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      {{#each gameDetail.screenshots}}
      <div class="carousel-item {{#unless @index}} active {{/unless}}">
        <img src="{{this.image}}" class="d-block w-100" alt="...">
      </div>
      {{/each }}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  </div>
    <div class="container text-start col">
      <h1>{{gameDetail.title}}</h1>
      <h4>Genre:</h4>
      <p> {{gameDetail.genre}}</p>
        <h4>Publisher:</h4>
      <p>{{gameDetail.publisher}}</p>
      <h4>Developer:</h4>
        <p>{{gameDetail.developer}}</p>
      <h4>Release Date:</h4>
        <p>{{gameDetail.release_date}}</p>
      <h4>Minimum System Requirements:</h4>
      <ul class="list-unstyled">
        <li>OS: {{gameDetail.minimum_system_requirements.os}}</li>
        <li>Processor: {{gameDetail.minimum_system_requirements.processor}}</li>
        <li>Memory: {{gameDetail.minimum_system_requirements.memory}}</li>
        <li>Graphics: {{gameDetail.minimum_system_requirements.graphics}}</li>
        <li>Storage: {{gameDetail.minimum_system_requirements.storage}}</li>
      </ul>
    </div>
  </div>
</div>
<div class="container text-center">
  <h3>Game description:</h3>
  <p>{{gameDetail.description}}</p><br>
</div>
{{#if gameDetail.game_url}}
  <h3 class="text-center "><a class="btn btn-primary" href="{{gameDetail.game_url}} ">Click to play for free</a></h3><br>
{{/if}}
<div class="text-center">
    <h3 >Game Reviews:</h3><br>
  <a  class="btn btn-primary " href="/games/{{gameDetail.id}}/details/create-review">Make your Review!</a>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>